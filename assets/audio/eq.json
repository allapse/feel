  },
  {
    "name": "NEON (霓虹)",
    "type": "bandpass",
    "freq": 1000,
    "q": 3.0,
    "color": "#ffff00",
    "desc": "像舊電台或電話，聲音極具擠壓感。適合搭配高頻率的線條扭曲。"
  },
  {
    "name": "PULSE (脈衝)",
    "type": "peaking",
    "freq": 80,
    "q": 6.0,
    "gain": 15,
    "color": "#ff0000",
    "desc": "強化重低音節奏。聲音沒變悶，但鼓點會讓畫面跳動得更劇烈。"
  },
  {
    "name": "GLITCH (裂解)",
    "type": "notch",
    "freq": 5000,
    "q": 1.0,
    "gain": 15,
    "color": "#00ff00",
    "desc": "挖掉中頻的一個窄縫。會產生一種電子訊號不穩的冷冽感。"
  }
